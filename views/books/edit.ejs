<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">Edit Book </h1>
    
<div class="col-6 offset-3">   
     <form action="/books/<%=book._id%>?_method=PUT" method="POST" novalidate class="form">
        <br>
    <div class="md-3">
     <label for="name" class="form-label">Name:</label>
     <input  class="form-control"   type="text" name="book[name]" id="name"  value="<%= book.name %>" required >
     </div>
     <div class="md-3">
     <label for="author" class="form-label">Author:</label>
     <input class="form-control"type="text" name="book[author]" id="author"value="<%= book.author %> " required>
     </div>
     <div class="md-3">
         <label for="image"class="form-label">Image URL:</label>
         <input class="form-control" type="text" name="book[image]" id="image" value="<%= book.image %> " required>
         </div>

     <div class="md-3">
     <label for="price"class="form-label">Price:</label>
     <input class="form-control" type="text" name="book[price]" id="price" value="<%= book.price %>" required>
     </div>
      <div class="md-3">
    <label for="instock"class="form-label">In Stock:</label>
    <input class="form-control" type="text" id="instock" name="book[instock]" value="<%= book.instock %>"  required>
    </div>
   
     <div class="md-3">
     <label for="about"class="form-label">About:</label>
     <textarea class="form-control" name="book[about]" id="about" cols="30" rows="10" required><%= book.about %></textarea>
     <br>
     <div class="md-3"><button class="btn btn-info">update book</button></div>
     <br>
     
</div>
</form> 
 

</form>